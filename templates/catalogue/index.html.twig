{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}

    <!--Partie principale avec les cards-->
    <div class="container-fluid d-flex flex-column pt-1 main-catalogue">

        <!--Partie sÃ©ries-->
        <section class="row shows">

            <div class="col-12 title d-flex justify-content-between">
                <h2 class="gallery">Series</h2>
                <a href="{{ path('catalogue_serie_list') }}">Voir tout> </a>
            </div>

            <div class="row">
                <div class="card-deck col-12 m-auto">
                    {% for serie in series %}
                        <div class="card">
                            <img src="{{ serie.poster }}" class="card-img-top" alt="Kaamelott">
                            <div class="card-body">
                                <a href="#" title="Voir la fiche technique"><h5 class="card-title">{{ serie.title }}</h5></a>
                                <p class="card-text">{{ serie.summary }}</p>
                                <p class="card-text"><small class="text-muted">Date de commencement : le {{ serie.startYear|date('d/m/Y') }}</small></p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </section>

        <!--parties films-->
        <section class="row movies">

            <div class="col-12 title d-flex justify-content-between">
                <h2 class="gallery">Films</h2>
                <a href="{{ path('catalogue_movie_list') }}">Voir tout> </a>
            </div>

            <div class="row">
                <div class="card-deck col-12 m-auto">
                    {% for movie in movies %}
                        <div class="card">
                            <img src="{{ movie.poster }}" class="card-img-top" alt="Jurassic Park">
                            <div class="card-body">
                                <a href="#"  title="Voir la fiche technique"><h5 class="card-title">{{ movie.title }}</h5></a>
                                <p class="card-text">{{ movie.summary }}</p>
                                <p class="card-text"><small class="text-muted">Date de sortie : {{ movie.releaseDate|date('d/m/Y') }}</small></p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!--Partie Mangas-->
        <section class="row mangas">

            <div class="col-12 title d-flex justify-content-between">
                <h2 class="gallery">Mangas</h2>
                <a href="{{ path('catalogue_manga_list') }}">Voir tout> </a>
            </div>

            <div class="row">
                <div class="card-deck col-12 m-auto">
                    {% for manga in mangas %}
                        <div class="card">
                            <img src="{{ manga.poster }}" class="card-img-top" alt="attack of titans">
                            <div class="card-body">
                                <a href="#" title="Voir la fiche technique"><h5 class="card-title">{{ manga.title }}</h5></a>
                                <p class="card-text">{{ manga.summary }}</p>
                                <p class="card-text"><small class="text-muted">Date de commencement : le {{ manga.startYear|date('d/m/Y') }}</small></p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>



    </div>
{% endblock %}
