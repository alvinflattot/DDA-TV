{% extends 'base.html.twig' %}

{% block title %}Catalogue des mangas{% endblock %}

{% block body %}

    <div class="container-fluid body-manga">
        {% if mangas is empty %}
            <div class="row">
                <p>Aucun mangas Ã  afficher</p>
            </div>
        {% else %}
            <!--parties mangas-->
            <section class="row">
                <div class="col-12 text-center p-5">
                    <h1>Mangas</h1>
                    <p class="col-12 text-center"><a href="{{ path('catalogue_index') }}">Retour au catalogue</a></p>
                </div>
            </section>

            <section class="row">

                <div class="card-deck col-12">
                    {% for manga in mangas %}
                        <div class="card">
                            <img src="{{ manga.poster }}" class="card-img-top" alt="Jurassic Park">
                            <div class="card-body">
                                <a href="#" title="Voir la fiche technique"><h5 class="card-title"><bold>{{ manga.title }}</bold></h5></a>
                                <p class="card-text">{{ manga.summary }}</p>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </section>
        {% endif %}
    </div>

{% endblock %}